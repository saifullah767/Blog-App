<% @users.each do |user| %>
  <div class='user_element'>
   <div class='user_img'><img src=<%= user.image %> alt="User image" width="150" height="150"></div>
   <div class='user_name'><h2><%= link_to user.name, user_path(user) %></h2><p>Number of posts: <%= user.posts_counter %></p></div>
</div>
<% end %>